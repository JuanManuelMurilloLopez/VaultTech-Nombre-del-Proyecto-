<%- include('../includes/_navsidePsicologo.ejs') %>
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grupos por Institucion</title>

    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet">
</head>

<body class="bg-light">
    <span class="badge text-bg-secondary">Cerrar Sesión</span>
    <h3>Nombre de la Institucion</h3>
    <h4>Estatus:</h4>
    <span class="badge text-bg-info">Activa</span>
    <br>
    <h4>Tipo de Institución: Educativa</h4>
    <br>
    <h1 class="text-center mt-5">GRUPOS REGISTRADOS</h1>
    
    <!-- Campo Buscar -->
    <div class="mb-3">
        <label for="buscar" class="form-label">Buscar</label>
        <input type="text" id="buscar" name="buscar" 
        class="form-control" required>
    </div>

    <!-- Boton de navegación "Registrar nuevo grupo" -->
    <button type="button" class="btn btn-primary"
    onclick="window.location.href=
    '/psicologo/registrar-grupo'">Registrar Nuevo</button>
    
    <!-- Grupos -->
    <div class = "grupos">
        <h3>Nombre del Grupo</h3>
        <span class="badge text-bg-info">Activa</span>
        <br>
        <h4>Carrera: Ingeniería en Tecnologías Computacionales</h4>
        <h4>Año de Generación: 2025</h4>
        <h4>Semestre: Feb - Jun</h4>
        <h4>Número de Aspirantes: 20</h4>
    </div>

    <!-- Botones de navegación Grupo, Edicion, Regresar" -->
    <button type="button" class="btn btn-primary"
    onclick="window.location.href=
    '/psicologo/aspirantes'">Ver Grupo</button>

    <button type="button" class="btn btn-primary"
    onclick="window.location.href=
    '/psicologo/editar-grupo'">Editar</button>

    <button type="button" class="btn btn-secondary"
    onclick="window.location.href=
    '/psicologo/catalogo-instituciones'">Regresar</button>

    <!-- Bootstrap JS -->
    <script src=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
</body>