<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar aspirante</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet">
</head>
<body>
    <div class="container">
        <div>
            <h1 class="text-container">EDITAR INFORMACIÓN DE ASPIRANTE</h1>
        </div>
        <div>
            <!--Input nombre-->
            <div class="mb-3">
                <label class="form-label" for="">Nombre</label>
                <input class="form-control" type="text" name="" id="">
            </div>
            <!--Input Apellido Paterno-->
            <div class="mb-3">
                <label class="form-label" for="">Apellido Paterno</label>
                <input class="form-control" type="text" name="" id="">
            </div>
            <!--Input Apellido Materno-->
            <div class="mb-3">
                <label class="form-label" for="">Apellido Materno</label>
                <input class="form-control" type="text" name="" id="">
            </div>
            <!--Input Correo-->
            <div class="mb-3">
                <label class="form-label" for="">Correo electrónico</label>
                <input class="form-control" type="text" name="" id="">
            </div>
            <!--Input Número-->
            <div class="mb-3">
                <label class="form-label" for="">Número de teléfono</label>
                <input class="form-control" type="text" name="" id="">
            </diV>

            <!--Input Pais-->
            <div>
                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" 
                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        País de origen
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Mexico</a></li>
                        <li><a class="dropdown-item" href="#">Argentina</a></li>
                        <li><a class="dropdown-item" href="#">España</a></li>
                    </ul>
                </div>
            </div>

            <!--Input Estado-->
            <div>
                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Estado de origen
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Querétaro</a></li>
                        <li><a class="dropdown-item" href="#">CDMX</a></li>
                        <li><a class="dropdown-item" href="#">Monterrey</a></li>
                        <li><a class="dropdown-item" href="#">Puebla</a></li>
                    </ul>
                </div>
            </div>
            <!-- Estatus de aspirante -->
            <div>
                <p>Estatus:</p>
                <div>
                    <p>Activo</p>
                </div>
                <button type="button" class="btn btn-primary btn-sm">Desactivar</button>
            </div>
        </div>


        <div>
            <!-- Boton de navegación "Regresar" -->
            <a href="/psicologo/aspirantes" class="btn btn-primary">Regresar</a>

            <!-- Boton de navegación "Guardar" -->
            <a href="/psicologo/aspirantes" class="btn btn-primary" 
            onclick="confirm('¿Está seguro de guardar los cambios?')">Guardar</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
</body>
</html>