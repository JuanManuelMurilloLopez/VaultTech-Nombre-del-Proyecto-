<%- include('../includes/_navsidePsicologo.ejs') %>
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar instituciones</title>


    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container">
        <!-- Boton cerrar sesión -->
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="button" class="btn btn-secondary"
            onclick="window.location.href=
            '/login'">Cerrar Sesión</button>
        </div>

        <h1 class="text-center">EDITAR INSTITUCIÓN</h1>
       
        <!-- Campo Nombre -->
        <div class="form-floating mb-3">
            <input type="" class="form-control" id="" placeholder="">
            <label for="">Nombre</label>
        </div>
       
        <!-- Campo Tipo Institución -->
        <select class="form-select" aria-label="Default select example">
            <option selected>Tipo de Institución</option>
            <option value="1">Educativa</option>
            <option value="2">Laboral</option>
            <option value="3">Artistica</option>
        </select>


        <br>
        <h3>Estatus: </h3>
        <button type="button" class="btn btn-info">Activa</button>
        <button type="button" class="btn btn-danger">Desactivar</button>
        <p></p>
        <!-- Botones de navegación "Regresar y Guardar" -->
        <button type="button" class="btn btn-secondary"
        onclick="window.location.href=
        '/psicologo/catalogo-instituciones'"
        >Regresar</button>


        <button type="button" class="btn btn-primary"
        onclick="confirm('¿Está seguro de guardar los cambios?'),
        window.location.href=
        '/psicologo/catalogo-instituciones'"
        >Guardar</button>
    </div>


    <!-- Bootstrap JS -->
    <script src=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
</body>
